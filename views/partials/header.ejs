<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" integrity="sha256-h20CPZ0QyXlBuAw7A+KluUYx/3pK+c7lYEpqLTlxjYQ=" crossorigin="anonymous" />
    
    <!-- Offline links -->
    <link rel="stylesheet" href="css/css.css">
    <style>

    </style>
    <title>Node.js & Passport Login App</title>
</head>

<body>

    <nav class="grey darken-3">
        <div class="container">
            <div class="nav-wrapper">
                <a href="/" class="brand-logo">StoryBooks</a>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="/stories">Public Stories</a></li>
                    <li><a href="/about"></i>About</a></li>

                    <% if(user) { %>

                    <li><a href="/dashboard">Welcome <%= user.firstName %> </a></li>
                    <li><a href="/auth/logout"></i>logout</a></li>

                    <% } else { %>
                    
                    <li><a href="/user/register"><i class="fa fa-sign-in-alt grey-text fs-16 mr-1 white-text"></i>Sign Up</a></li>
                    <li><a href="/user/login"></i>
                        <i class="fa fa-user fs-12 mr-1"></i>Login</a>
                    </li>

                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <ul class="sidenav" id="mobile-demo">
        <% if(user) { %>
        <li><a href="/dashboard"><i class="fa fa-user-circle"></i>Welcome <%= user.firstName %> </a></li>
        <li><a href="/stories"><i class="fa fa-book fa-1x"></i>Public Stories</a></li>
        <li><a href="/dashboard"><i class="fa fa-cog"></i>Dashboard</a></li>
        <li><a href="/stories/my"><i class="fa fa-user"></i>My Stories</a></li>
        <li><a href="/auth/logout"><i class="fa fa-sign-out-alt fa-1x"></i>logout</a></li>
        <li class="divider"></li>
        <% } else { %>
        <li><a class="btn red darken-1" href="/auth/google"><i class="fab fa-google left"></i>Login with Google</a></li>
        <li><a href="/stories"><i class="fa fa-book fa-1x"></i>Public Stories</a></li>
        <li class="divider"></li>
        <% } %>
    </ul>
    
    <main>
        <div>
            <%- include ('../partials/add-btn.ejs') %>
        </div>